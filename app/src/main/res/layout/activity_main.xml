<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0e8e8"
    android:weightSum="1"
    tools:context=".ListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight=".50"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/plus"
            android:onClick="openAddActivity"
            android:text="Add item"
            android:textColor="#000000"
            android:textSize="22dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight=".50"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/list"
            android:onClick="openListActivity"
            android:text="Expenses"
            android:textColor="#000000"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight=".40"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/settings"
            android:onClick="openSettingsActivity"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="22dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight=".40"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/chart"
            android:onClick="openStatisticsActivity"
            android:text="Statistics"
            android:textColor="#000000"
            android:textSize="22dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView12"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="791dp" />


</RelativeLayout>